= form_for @kite do |f|
  -if @kite.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kite.errors.count, "error")} prohibited this kite from being saved:"
      %ul
        - @kite.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
